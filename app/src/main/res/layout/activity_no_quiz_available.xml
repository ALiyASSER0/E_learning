<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Doctor.Quiz.AnimationNoQuizAvailable">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/_25sdp"
        app:cardCornerRadius="15dp"
        app:cardElevation="@dimen/_100sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintHeight_percent="0.52"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_170sdp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/no" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_115sdp"
            android:layout_gravity="bottom"
            android:gravity="center_horizontal"
           android:paddingHorizontal="@dimen/_10sdp"


            android:text="No Quiz Available\n the degrees of quizes equial\n the degrees of course"
            android:textColor="@color/colorSecondary"
            android:textSize="@dimen/_20sdp"
            android:textStyle="bold" />


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
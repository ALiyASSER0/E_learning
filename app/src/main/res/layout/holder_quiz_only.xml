<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_marginHorizontal="@dimen/_2sdp"
    android:layout_marginVertical="@dimen/_5sdp"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
android:background="#106FF3"
        >





        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Email : "
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/white"
            tools:text="13 naser"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/email"
            app:layout_constraintBottom_toBottomOf="@+id/email"
            app:layout_constraintStart_toEndOf="@+id/email"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Name : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_5sdp"
            android:fontFamily="@font/cairo_semibold"
            app:layout_constraintTop_toBottomOf="@+id/email"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_namee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="ali"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/name"
            app:layout_constraintBottom_toBottomOf="@+id/name"
            app:layout_constraintStart_toEndOf="@+id/name"
            />



        <TextView
            android:id="@+id/quizz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="Quiz Grade : "
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/_2sdp"
            android:fontFamily="@font/cairo_semibold"
            app:layout_constraintTop_toBottomOf="@+id/name"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/text_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="120"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/quizz"
            app:layout_constraintBottom_toBottomOf="@+id/quizz"
            app:layout_constraintStart_toEndOf="@+id/quizz"
            />
        <TextView
            android:id="@+id/text_quiz2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14sdp"
            android:text="/"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/quizz"
            app:layout_constraintBottom_toBottomOf="@+id/quizz"
            app:layout_constraintStart_toEndOf="@+id/text_quiz"
            />
        <TextView
            android:id="@+id/text_quiz3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            tools:text="120"
            android:textColor="@color/white"
            android:fontFamily="@font/cairo_semibold"
            android:layout_marginStart="@dimen/_5sdp"
            app:layout_constraintTop_toTopOf="@+id/quizz"
            app:layout_constraintBottom_toBottomOf="@+id/quizz"
            app:layout_constraintStart_toEndOf="@+id/text_quiz2"
            />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/amemations"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/person" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

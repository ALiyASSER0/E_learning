<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Student.Manage.PageStudentInf"
    android:background="#ECEAEA"
    >
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.30"
        app:cardBackgroundColor="#106FF3"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="-20dp"
        android:layout_marginBottom="100dp"
app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        />
<View
    android:id="@+id/view"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintHeight_percent="0.70"
    app:layout_constraintWidth_percent="0.90"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
android:background="@drawable/background"
    android:elevation="@dimen/_10sdp" />
    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.37"
        app:layout_constraintWidth_percent="0.70"
        app:layout_constraintStart_toStartOf="@+id/view"
app:layout_constraintTop_toBottomOf="@+id/Inf"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        android:background="@drawable/background"
        android:backgroundTint="#106FF3"

        android:elevation="@dimen/_10sdp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animationView2"
        android:layout_width="0dp"
        android:layout_height="@dimen/_70sdp"
        android:elevation="@dimen/_10sdp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/inf" />


    <ImageView
            android:id="@+id/Img"
            android:layout_width="0dp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_splash_hero"
            android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view"
            android:elevation="@dimen/_10sdp"
            />

    <TextView
        android:id="@+id/Inf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/cairo_bold"
        android:text="Course Information"
        android:layout_marginTop="@dimen/_30sdp"
        android:textSize="@dimen/_22sdp"
        android:textColor="#106FF3"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/Img"
        android:elevation="@dimen/_10sdp"
        />
        <TextView
            android:id="@+id/nameCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_bold"
            android:text="course name:  android"
            android:layout_marginTop="@dimen/_20sdp"
            android:textSize="@dimen/_15sdp"
            android:textColor="@color/white"


            app:layout_constraintStart_toStartOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/view"
            app:layout_constraintTop_toTopOf="@+id/view2"
            android:elevation="@dimen/_10sdp"
            />

    <TextView
        android:id="@+id/doctorCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="doctor name:  ali"
        android:textColor="@color/white"

        android:textSize="@dimen/_15sdp"

        app:layout_constraintStart_toStartOf="@+id/nameCourse"
        app:layout_constraintTop_toBottomOf="@+id/nameCourse" />

    <TextView
        android:id="@+id/attentenceCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="attendence grade:  5"
        android:textColor="@color/white"

        android:textSize="@dimen/_15sdp"

        app:layout_constraintStart_toStartOf="@+id/doctorCourse"
        app:layout_constraintTop_toBottomOf="@+id/doctorCourse" />

    <TextView
        android:id="@+id/gradeQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="grade quiz:  5"
        android:textColor="@color/white"

        android:textSize="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/attentenceCourse"
        app:layout_constraintTop_toBottomOf="@+id/attentenceCourse" />

    <TextView
        android:id="@+id/projectGride"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        android:fontFamily="@font/cairo_bold"
        android:text="project grade:  20"
        android:textColor="@color/white"

        android:textSize="@dimen/_15sdp"
        app:layout_constraintStart_toStartOf="@+id/gradeQuiz"
        app:layout_constraintTop_toBottomOf="@+id/gradeQuiz"

        />




<!--            android:layout_marginTop="10dp"-->
<!--            android:fontFamily="@font/cairo_bold"-->
<!--            android:text="name student" />-->
<!--    </androidx.cardview.widget.CardView>-->



</androidx.constraintlayout.widget.ConstraintLayout>